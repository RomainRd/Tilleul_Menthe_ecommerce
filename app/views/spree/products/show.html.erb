<% cache [I18n.locale, current_pricing_options, @product] do %>
  <div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
    <% @body_id = 'product-details' %>


    <div class="columns eight alpha" data-hook="product_left_part">
      <div class="row" data-hook="product_left_part_wrap">

        <div id="product-images" data-hook="product_images">
          <div id="main-image" data-hook>
            <%= render partial: 'image' %>
          </div>
          <div id="thumbnails" data-hook>
            <%= render partial: 'thumbnails' %>
          </div>
        </div>

<!--         <div data-hook="product_properties">
          <%#= render partial: 'properties' %>
        </div> -->

        <div data-hook="promotions">
          <%= render partial: 'promotions' %>
        </div>

      </div>
    </div>

    <div class="columns eight omega" id="product-description-box" data-hook="product_right_part">
      <div class="row" data-hook="product_right_part_wrap">

        <div id="product-description-all" data-hook="product_description">
          <div id="description-price-social">
            <h1 class="product-title" itemprop="name"><%= @product.name %></h1>

            <%= render partial: 'product_price' %>

            <div id="description" itemprop="description" data-hook="description">
              <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
            </div>
            <div id="social">
              <ul id="social-container">
                <li class="social-icon" id="facebook">
                  <%= link_to "", {onClick: "window.open('https://www.facebook.com/sharer/sharer.php?u=http%3A//localhost%3A3000/products/#{@product.slug}','','width=600,height=300'); return false;"} do %>
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                  <% end %>
                </li>

                <li class="social-icon" id="twitter">
                  <%= link_to "", {onClick: "window.open('https://twitter.com/intent/tweet?text=#{@product.name} - http://localhost:3000/products/#{@product.slug} <3 <3','','width=600,height=300'); return false;"} do %>
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                  <% end %>
                </li>

                <li class="social-icon" id="pinterest">
                  <a data-pin-do="buttonPin"
                    href="https://www.pinterest.com/pin/create/button/"
                    data-pin-description=""
                    data-pin-media =""
                    data-pin-url=""
                    data-pin-shape="round"
                    ></a>
                </li>
              </ul>
            </div>
          </div>

          <div id="cart-form" data-hook="cart_form">
            <%= render partial: 'cart_form' %>
          </div>

        </div>
      </div>
    </div>

        <%#= render partial: 'taxons' %>
  </div>
<% end %>

<script
    type="text/javascript"
    async defer
    src="//assets.pinterest.com/js/pinit.js"
></script>
