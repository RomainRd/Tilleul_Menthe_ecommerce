<nav class="columns sixteen" id="main-nav-bar-wrapper">
  <ul id="main-nav-bar" class="inline" data-hook>
    <% @taxonomies.each do |taxonomy| %>
      <li class="taxons-list-container">
        <%= nav_tree(taxonomy.root, @taxons, 1) %>
      </li>
    <% end %>
    <li id="link-to-cart" data-hook>
      <%= link_to spree.cart_path do %>
        <i class="fa fa-shopping-basket" aria-hidden="true"></i>
        <span><%= simple_current_order.item_count %> articles</span>
      <% end %>
    </li>
  </ul>
</nav>
